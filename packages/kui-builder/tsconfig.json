{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "outDir": "../../build",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "@kui-shell/core/tests/*": ["build/packages/app/tests/*"],
      "@kui-shell/settings/*": ["packages/app/build/*"],
      "@kui-shell/prescan": ["build/.pre-scanned.json"],
      "@kui-shell/plugin-*": ["plugins/plugin-*"],
      "@kui-shell/core/*": ["packages/app/src/*"],
      "@kui-shell/*": ["packages/*"]
    }
  },
  "include": [
    "../../packages/*/src",
    "../../plugins/*/src"
  ],
  "exclude": [
    "**/flycheck*.ts"
  ]
}
