{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "outDir": "../../build",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "../app",
    "paths": {
      "@kui/core/*": ["src/*"],
      "@kui/core/tests/*": ["../../build/packages/app/tests/*"],
      "@kui/settings/*": ["../../build/*"],
      "@kui/prescan": ["../../build/.pre-scanned.json"],
      "@kui/*": ["../../plugins/*"]
    }
  },
  "include": [
    "../../packages/*/src",
    "../../plugins/*/src"
  ],
  "exclude": [
    "**/flycheck*.ts"
  ]
}
