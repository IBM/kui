{
  "name": "kui-shell",
  "version": "2.0.3",
  "description": "An Electron-based shell for cloud-native development",
  "homepage": "https://github.com/IBM/kui#readme",
  "scripts": {
    "postinstall": "cd plugins && npm install",
    "prep": "npm run build && npm run compile && ./bin/seticon.js",
    "build": "node ./bin/build.js standalone",
    "compile": "if [ -d ../dist ]; then cd ../dist/bin && ./compile.js; fi",
    "test": "cd ../tests && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IBM/kui.git"
  },
  "keywords": [
    "OpenWhisk",
    "CLI",
    "UI",
    "kubernetes",
    "visualization",
    "serverless"
  ],
  "author": {
    "name": "Nick Mitchell",
    "email": "nickm@us.ibm.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/IBM/kui/issues/new"
  },
  "optionalDependencies": {
    "fileicon": "^0.2.2"
  }
}
