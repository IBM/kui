{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "./app",
    "paths": {
      "@kui/*": ["src/*"],
      "@kui-plugin/*": ["../packages/*"],
      "@kui-plugin-src/*": ["../packages/*"],
      "@settings": ["build"],
      "@test/*": ["../tests/*"]
    }
  },
  "include": [
    "app/src",
    "packages"
  ],
  "exclude": [
    "build/",
    "**/flycheck*.ts",
    "**/*.d.ts",
    "plugins",
    "dist"
  ]
}
